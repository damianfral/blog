@import nib
html, body
	width: 100%
	overflow-x: hidden
	color: #333
	font-family: 'Crimson Roman'


body
	display: flex
	min-height: 100%
	flex-direction: column

header, footer
	padding: 1vw
	font-size: 1.7em
	background-color: #222

header a, footer a
	color: #D33
	text-decoration: none

header a:hover, header a:focus, footer a:hover, footer a:focus
	color: #EEE
	text-decoration: none

a
	-moz-transition: 0.2s color linear
	-webkit-transition: 0.2s color linear
	transition: 0.2s color linear
	color: #D33
	text-decoration: none

a:hover, a:focus
	color: #333
	text-decoration: underline

footer, #comments
	display: flex
	-webkit-box-orient: vertical
	-webkit-box-direction: normal
	-webkit-flex-direction: column
	-moz-box-orient: vertical
	-moz-box-direction: normal
	-ms-flex-direction: column
	flex-direction: column
	-webkit-box-align: center
	-webkit-align-items: center
	-moz-box-align: center
	-ms-flex-align: center
	align-items: center
	-webkit-box-pack: justify
	-webkit-justify-content: space-between
	-moz-box-pack: justify
	-ms-flex-pack: justify
	justify-content: space-between
	padding: 1.5rem
	font-size: 2em
	text-align: center

h1, h2, h3, h4, header
	font-family: 'League Gothic Regular'
	font-weight: normal
	text-transform: uppercase
	width: 100%


li
	list-style: disc
	margin-left: 1.2em

article
	flex: 1

	h1
		font-size: 1.7em
		margin-top: 1.8em

	h2
		margin-top: 1.5em

	h3
		margin-top: 1.4em

	h4
		margin-top: 1.1em

	p, li
		font-size: 1.3em
		width: 100%
	
	p > code
		font-size: 0.9em
		background-color: #EEE

	code
		font-size: 1.2em


	ul, li
		margin-left: 0


.posts
	font-size: 1.3em

h1, h2, h3, h4
	margin-bottom: 0px

img, pre
	position: relative
	margin-bottom: 1.25em
	-moz-object-fit: contain
	border: solid 0.2rem #222
	width: 100%

.article-title
	margin-top: 0px
	margin-bottom: 0px
	font-size: 2.5em

.date
	font-style: italic
	width: 100%

.footnotes
	font-size: 0.7em
	width: 100%
	hr
		border-style: dashed
		border-top-width: 1px
		border-color: #EEE

.posts > li
	list-style: none

.sourceCode
	overflow-x: auto

.sourceCode.Coffeescript > code
	color: #333

#wrapper
	color: #223
	font-family: 'Crimson Roman'
	padding: 32px

.MathJax
	font-size: 200% !important

.MathJax_Display
	width: 100% !important
	margin: -2em !important

pre
	background-color: #EEE
	padding: 8px
	width: 100%

.Container
	max-width: 50rem
	margin: 0 auto

#comments
	background-color: #EEE
	opacity: 0

blockquote
	background-color: #EEE
	margin: 0
	padding: 1em
	font-style: italic
	p
		margin: 0em